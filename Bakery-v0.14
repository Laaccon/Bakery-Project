// fileread
// program to read in a set of data into a vector

#include <iostream>
#include <fstream>
#include <vector>
#include <string> // sometimes you need this, depends on the compiler

using namespace std;

int main() {

  // declare and initialize some variables
  vector <double> xData; // vector to hold x data points
  string aLine; // hold a line of the file
  double temp; // temporary variable

  // open the input file as an input file stream (ifstream)
  ifstream myfile ( "xData.txt" );

  // if the file is open...
  if (myfile.is_open()) {
    // and while it's not the end of the file...
    while (!myfile.eof() ) {
      // read in a line of the file myfile to variable aLine
      getline ( myfile, aLine );

      // check that there is something on this line!

      if(aLine.length() > 0) {
	// there is something on this line
	
	// convert aLine (string) to temp (double)
	temp = atof( aLine.c_str() );
	
	// store the value in the vector
	xData.push_back(temp);
      } else {
	// there is nothing on the line, do nothing
      }
      
    }
    // now at the file end, close it
    myfile.close();
  }  else {
    // if the file couldn't be opened, write a message and quit
    cout << "Unable to open file\n";
    exit(1);
  }

  // we have the data now, output it as a check
  for ( int j = 0; j < xData.size(); j++ ) {
    printf("x = %5.2f\n",xData[j]);
  }

  return 0;
}
